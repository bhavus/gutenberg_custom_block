{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "core/post-author",
  "title": "pms/author-info",
  "category": "pms-theme-blocks",
  "description": "Author Example Block1",
  "textdomain": "pms",
  "attributes": {
    "textAlign": {
      "type": "string"
    },
    "avatarSize": {
      "type": "number",
      "default": 48
    },
    "showAvatar": {
      "type": "boolean",
      "default": true
    },
    "showBio": {
      "type": "boolean"
    },
    "byline": {
      "type": "string"
    },
    "isLink": {
      "type": "boolean",
      "default": false
    },
    "linkTarget": {
      "type": "string",
      "default": "_self"
    }
  },
  "usesContext": [ "postType", "postId", "queryId" ],
  "supports": {
    "html": false,
    "spacing": {
      "margin": true,
      "padding": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "__experimentalFontFamily": true,
      "__experimentalFontWeight": true,
      "__experimentalFontStyle": true,
      "__experimentalTextTransform": true,
      "__experimentalTextDecoration": true,
      "__experimentalLetterSpacing": true,
      "__experimentalDefaultControls": {
        "fontSize": true
      }
    },
    "color": {
      "gradients": true,
      "link": true,
      "__experimentalDuotone": ".wp-block-post-author__avatar img",
      "__experimentalDefaultControls": {
        "background": true,
        "text": true
      }
    }
  },
  //"editorScript": "file:../../../build/blocks/author-info/editor.js",
  //"editorStyle": "file:../../../build/blocks/author-info.css",
  "editorStyle": "wp-block-post-author-editor",
  "style": "wp-block-post-author"
}